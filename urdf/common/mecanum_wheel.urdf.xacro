<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:property name="wheel_radius" value="0.07625"/>
  <xacro:property name="wheel_length" value="0.0269"/>
  <xacro:property name="rotor_radius" value="0.008"/>

  <xacro:macro name="rotor" params="prefix suffix theta">
    <!--  link  -->
    <link name="${prefix}_rotor_${suffix}">
      <collision>
        <!--  still has wrong ration of rotor-->
        <!--        <geometry>-->
        <!--          <mesh filename="package://rm_description/meshes/common/rotor.stl"-->
        <!--                scale="0.001 0.001 0.001"/>-->
        <!--        </geometry>-->
        <geometry>
          <sphere radius="${rotor_radius}"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.036"/>
        <inertia ixx="3128e-9" ixy="-1638.12e-9" ixz="0.0" iyy="3128e-9" iyz="0.0" izz="4766e-9"/>
      </inertial>
      <gazebo>
        <mu1>200</mu1>
        <mu2>200</mu2>
      </gazebo>
    </link>

    <joint name="${prefix}_rotor_${suffix}_joint" type="continuous">
      <origin
          xyz="${(wheel_radius-rotor_radius)*cos(theta-pi/2) * 0.70719678} 0 ${(wheel_radius-rotor_radius)*sin(theta-pi/2) * 0.70719678}"
          rpy="0 0 0"/>
      <axis xyz="${cos(theta) * 0.70719678} ${- reflect * 0.70719678} ${sin(theta) * 0.70719678}"/>
      <parent link="${prefix}_wheel"/>
      <child link="${prefix}_rotor_${suffix}"/>
    </joint>

  </xacro:macro>

  <xacro:macro name="mecanum_wheel" params="prefix parent wheel_x_offset wheel_y_offset wheel_z_offset reflect">
    <!--  link  -->
    <link name="${prefix}_wheel">
      <visual>
        <geometry>
          <xacro:if value="${reflect == 1}">
            <mesh filename="package://rm_description/meshes/common/right_threaded_mecanum_wheel.stl"
                  scale="0.001 0.001 0.001"/>
          </xacro:if>
          <xacro:if value="${reflect == -1}">
            <mesh filename="package://rm_description/meshes/common/left_threaded_mecanum_wheel.stl"
                  scale="0.001 0.001 0.001"/>
          </xacro:if>
        </geometry>
      </visual>
      <inertial>
        <mass value="0.59"/>
        <inertia ixx="1.416e-3" ixy="0.0" ixz="0.0" iyy="2.749e-3" iyz="0.0" izz="1.416e-3"/>
      </inertial>
    </link>

    <!--  joint  -->
    <joint name="${prefix}_wheel_joint" type="continuous">
      <axis xyz="0 1 0"/>
      <origin xyz="${wheel_x_offset} ${wheel_y_offset} ${wheel_offset_z}" rpy="0 0 0"/>
      <dynamics damping="0.1" friction="0.1"/>
      <parent link="${parent}"/>
      <child link="${prefix}_wheel"/>
    </joint>

    <!-- 16 rotor  2pi/16=0.393-->
    <xacro:rotor prefix="${prefix}" suffix="0" theta="${0*0.393}"/>
    <xacro:rotor prefix="${prefix}" suffix="1" theta="${1*0.393}"/>
    <xacro:rotor prefix="${prefix}" suffix="2" theta="${2*0.393}"/>
    <xacro:rotor prefix="${prefix}" suffix="3" theta="${3*0.393}"/>
    <xacro:rotor prefix="${prefix}" suffix="4" theta="${4*0.393}"/>
    <xacro:rotor prefix="${prefix}" suffix="5" theta="${5*0.393}"/>
    <xacro:rotor prefix="${prefix}" suffix="6" theta="${6*0.393}"/>
    <xacro:rotor prefix="${prefix}" suffix="7" theta="${7*0.393}"/>
    <xacro:rotor prefix="${prefix}" suffix="8" theta="${8*0.393}"/>
    <xacro:rotor prefix="${prefix}" suffix="9" theta="${9*0.393}"/>
    <xacro:rotor prefix="${prefix}" suffix="10" theta="${10*0.393}"/>
    <xacro:rotor prefix="${prefix}" suffix="11" theta="${11*0.393}"/>
    <xacro:rotor prefix="${prefix}" suffix="12" theta="${12*0.393}"/>
    <xacro:rotor prefix="${prefix}" suffix="13" theta="${13*0.393}"/>
    <xacro:rotor prefix="${prefix}" suffix="14" theta="${14*0.393}"/>
    <xacro:rotor prefix="${prefix}" suffix="15" theta="${15*0.393}"/>

    <!-- transmission -->
    <transmission name="${prefix}_wheel_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <actuator name="${prefix}_wheel_actuator">
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
        <mechanicalReduction>${reflect}</mechanicalReduction>
      </actuator>
      <joint name="${prefix}_wheel_joint">
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
      </joint>
    </transmission>

  </xacro:macro>

</robot>