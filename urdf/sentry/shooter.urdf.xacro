<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="$(find rm_description)/urdf/common/friction.urdf.xacro"/>


  <xacro:property name="wheel_offset_x" value="0.0504"/>
  <xacro:property name="wheel_offset_y" value="0.0365"/>
  <xacro:property name="wheel_offset_z" value="0.01072"/>


  <xacro:friction_wheel prefixs="left" connected_to="pitch"
                        wheel_x_offset="${wheel_offset_x}" wheel_y_offset="${-wheel_offset_y}"
                        wheel_z_offset="${wheel_offset_z}"/>

  <xacro:friction_wheel prefixs="right" connected_to="pitch"
                        wheel_x_offset="${wheel_offset_x}" wheel_y_offset="${wheel_offset_y}"
                        wheel_z_offset="${wheel_offset_z}"/>


  <link name="trigger">
    <inertial>
      <mass value="0.216"/>
      <origin xyz="0 0 -0.023"/>
      <inertia ixx="2.568e-4" ixy="1.465e-6" ixz="4.224e-7" iyy="2.534e-4"
               iyz="1.169e-6" izz="1.627e-4"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://rm_description/meshes/sentry/trigger.stl" scale="0.001 0.001 0.001" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://rm_description/meshes/hero/trigger.stl"  scale="0.001 0.001 0.001" />
      </geometry>
    </collision>
  </link>

  <joint name="trigger_joint" type="continuous">
    <origin xyz="0.0797 -0.0169 -0.2355" rpy="0 0 0"/>
    <dynamics damping="0.0" friction="0.01"/>
    <limit effort="1.0" velocity="43.54" lower="-1e16" upper="1e16"/>
    <parent link="base_link"/>
    <child link="trigger"/>
    <axis xyz="0 0 1 "/>

  </joint>


</robot>