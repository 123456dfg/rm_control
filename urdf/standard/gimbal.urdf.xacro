<robot>

    <!-- https://upload.wikimedia.org/wikipedia/commons/5/52/Wheelbase_and_Track.png -->


    <link name="yaw_link">
        <inertial>
            <mass value="0.592087"/>
            <origin xyz="0 0 0.0127"/>
            <inertia ixx="6.17e-4" ixy="0." ixz="0." iyy="6.182e-4"
                     iyz="0." izz="1.07e-3"/>
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://rm_description/meshes/standard/yaw_base.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://rm_description/meshes/standard/yaw_base.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>
    </link>

    <joint name="yaw_joint"  type="fixed">
        <origin xyz="0 0 0.0466"
                rpy="0 0 0" />
        <parent link="base_link" />
        <child link="yaw_link" />
        <axis xyz="0 0 1" />

    </joint>

    <link name="yaw_base_link">
        <inertial>
            <mass value="4.17874"/>
            <origin xyz="-0.00282 0 0.06328"/>
            <inertia ixx="2.401e-2" ixy="-1.449e-4" ixz="7.408e-4" iyy="2.166e-2"
                     iyz="-1.47e-4" izz="5.707e-3"/>
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://rm_description/meshes/standard/yaw_arm.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://rm_description/meshes/standard/yaw_arm.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>
    </link>
    <joint name="yaw_arm_joint"  type="continuous">
        <origin xyz="0 0 0.023"  rpy="0 0 0" />
        <parent link="yaw_link" />
        <child link="yaw_base_link" />
        <axis xyz="0 0 1" />

    </joint>

    <link name="pitch_link">
        <inertial>
            <mass value="1.538674"/>
            <origin xyz="0.009047 -0.00307 0.019014"/>
            <inertia ixx="1.217e-2" ixy="1.677e-3" ixz="3.224e-3" iyy="2.570e-2"
                     iyz="-8.223e-4" izz="2.342e-2"/>
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://rm_description/meshes/standard/pitch.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://rm_description/meshes/standard/pitch.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>
    </link>

    <joint name="pitch_joint"  type="revolute">
        <origin xyz="0 0 0.189"  rpy="0 0 0" />
        <limit effort="3000" velocity="1000" lower="-0.436323" upper="0.7853982"/>
        <parent link="yaw_base_link" />
        <child link="pitch_link" />
        <axis xyz="0 1 0 " />

    </joint>

    <!-- transmission -->
    <transmission name="trans_yaw_arm_joint">
        <type>transmission_interface/SimpleTransmission</type>
        <actuator name="yaw_arm_joint_motor">
            <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
            <mechanicalReduction>1</mechanicalReduction>
        </actuator>
        <joint name="yaw_arm_joint">
            <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
        </joint>
    </transmission>
    <transmission name="trans_pitch_joint">
        <type>transmission_interface/SimpleTransmission</type>
        <actuator name="pitch_joint_motor">
            <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
            <mechanicalReduction>1</mechanicalReduction>
        </actuator>
        <joint name="pitch_joint">
            <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
        </joint>
    </transmission>

</robot>