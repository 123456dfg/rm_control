<?xml version="1.0" encoding="utf-8"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:property name="threshold" value="0.01"/>
    <xacro:property name="lower_limit" value="-0.436323"/>
    <xacro:property name="upper_limit" value="0.7853982"/>

    <link name="yaw">
        <inertial>
            <mass value="4.367"/>
            <origin xyz="0.042103 0.001062 0.132315"/>
            <inertia ixx="7.943e-2" ixy="-4.889e-5" ixz="-5.618e-3" iyy="8.143e-2"
                     iyz="-4.14e-5" izz="7.76e-3"/>
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://rm_description/meshes/hero/yaw.stl" scale="0.001 0.001 0.001" />
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://rm_description/meshes/hero/yaw.stl"  scale="0.001 0.001 0.001" />
            </geometry>
        </collision>
    </link>

    <joint name="yaw_joint" type="continuous">
        <origin xyz="0 0 0.124"
                rpy="0 0 0"/>
        <dynamics damping="0.0" friction="0.1"/>
        <limit effort="1.2" velocity="13.82" lower="${lower_limit}" upper="${upper_limit}"/>
        <parent link="base_link"/>
        <child link="yaw"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="pitch">
        <inertial>
            <mass value="1.65"/>
            <origin xyz="0.080137 -0.002734 0.011093"/>
            <inertia ixx="3.355e-3" ixy="2.3e-5" ixz="-1.069e-3" iyy="2.153e-2"
                     iyz="-6.373e-5" izz="1.995e-2"/>
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://rm_description/meshes/hero/pitch.stl" scale="0.001 0.001 0.001" />
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://rm_description/meshes/hero/pitch.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>
    </link>

    <joint name="pitch_joint" type="revolute">
        <origin xyz="0 0 0.384" rpy="0 0 0"/>
        <dynamics damping="0.0" friction="0.1"/>
        <limit effort="1.2" velocity="13.82" lower="${lower_limit}" upper="${upper_limit}"/>
        <!--        <safety_controller k_velocity="10"-->
        <!--                           k_position="15"-->
        <!--                           soft_lower_limit="${lower_limit+threshold}"-->
        <!--                           soft_upper_limit="${upper_limit-threshold}"/>-->
        <parent link="yaw"/>
        <child link="pitch"/>
        <axis xyz="0 1 0 "/>
    </joint>

</robot>