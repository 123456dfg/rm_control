<?xml version="1.0" encoding="utf-8"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:property name="threshold" value="0.01"/>
    <xacro:property name="lower_limit" value="-0.436323"/>
    <xacro:property name="upper_limit" value="0.7853982"/>

    <link name="yaw">
        <inertial>
            <mass value="9.19417"/>
            <origin xyz="0.042103 0.001062 0.132315"/>
            <inertia ixx="2.820e-1" ixy="-1.017e-5" ixz="-3.986e-2" iyy="3.396e-1"
                     iyz="1.293e-3" izz="7.004e-2"/>
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://rm_description/meshes/hero/yaw.stl" scale="0.001 0.001 0.001" />
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://rm_description/meshes/hero/yaw.stl"  scale="0.001 0.001 0.001" />
            </geometry>
        </collision>
    </link>

    <joint name="yaw_joint" type="continuous">
        <origin xyz="0 0 0.1"
                rpy="0 0 0"/>
        <dynamics damping="0.0" friction="0.1"/>
        <limit effort="1.2" velocity="13.82" lower="${lower_limit}" upper="${upper_limit}"/>
        <parent link="base_link"/>
        <child link="yaw"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="pitch">
        <inertial>
            <mass value="1.956376"/>
            <origin xyz="0.080443 -0.002306 0.294343"/>
            <inertia ixx="1.148e-2" ixy="1.569e-3" ixz="2.374e-3" iyy="2.472e-2"
                     iyz="-8.276e-4" izz="2.189e-2"/>
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://rm_description/meshes/hero/pitch.stl" scale="0.001 0.001 0.001" />
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://rm_description/meshes/hero/pitch.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>
    </link>

    <joint name="pitch_joint" type="revolute">
        <origin xyz="0 0 0.284" rpy="0 0 0"/>
        <dynamics damping="0.0" friction="0.1"/>
        <limit effort="1.2" velocity="13.82" lower="${lower_limit}" upper="${upper_limit}"/>
        <!--        <safety_controller k_velocity="10"-->
        <!--                           k_position="15"-->
        <!--                           soft_lower_limit="${lower_limit+threshold}"-->
        <!--                           soft_upper_limit="${upper_limit-threshold}"/>-->
        <parent link="yaw"/>
        <child link="pitch"/>
        <axis xyz="0 1 0 "/>
    </joint>

</robot>