<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="$(find rm_description)/urdf/hero/chassis.urdf.xacro"/>

    <!-- https://upload.wikimedia.org/wikipedia/commons/5/52/Wheelbase_and_Track.png -->


    <link name="yaw_link">
        <inertial>
            <mass value="0.592087"/>
            <origin xyz="0 0 0.013702"/>
            <inertia ixx="9.726e-4" ixy="0." ixz="0." iyy="8.809e-4"
                     iyz="0" izz="1.58e-3"/>
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://rm_description/meshes/hero/yaw_base.stl" scale="0.001 0.001 0.001" />
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://rm_description/meshes/hero/yaw_base.stl"  scale="0.001 0.001 0.001" />
            </geometry>
        </collision>
    </link>

    <joint name="yaw_joint"  type="fixed">
        <origin xyz="0 0 0.1"
                rpy="0 0 0" />
        <parent link="base_link" />
        <child link="yaw_link" />
        <axis xyz="0 0 1" />

    </joint>

    <link name="yaw_base_link">
        <inertial>
            <mass value="4.17874"/>
            <origin xyz="-0.012411 -0.01295 0.120327"/>
            <inertia ixx="7.425e-2" ixy="-4.926e-5" ixz="4.741e-3" iyy="7.597e-2"
                     iyz="7.286e-5" izz="7.357e-3"/>
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://rm_description/meshes/hero/yaw_arm.stl" scale="0.001 0.001 0.001" />
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://rm_description/meshes/hero/yaw_arm.stl"  scale="0.001 0.001 0.001" />
            </geometry>
        </collision>
    </link>
    <joint name="yaw_arm_joint"  type="continuous">
        <origin xyz="0 0 0"  rpy="0 0 0" />
        <parent link="yaw_link" />
        <child link="yaw_base_link" />
        <axis xyz="0 0 1" />

    </joint>


    <link name="pitch_link">
        <inertial>
            <mass value="1.538674"/>
            <origin xyz="0.049138 -0.002939 0.348926"/>
            <inertia ixx="1.93e-1" ixy="6.188e-5" ixz="-2.95e-2" iyy="2.016e-1"
                     iyz="1.256e-3" izz="1.021e-2"/>
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://rm_description/meshes/hero/pitch.stl" scale="0.001 0.001 0.001" />
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://rm_description/meshes/hero/pitch.stl"  scale="0.001 0.001 0.001" />
            </geometry>
        </collision>
    </link>

    <joint name="pitch_joint"  type="revolute">
        <origin xyz="0 0 0.2841"  rpy="0 0 0" />
        <limit effort="30" velocity="10" lower="-0.436323" upper="0.7853982"/>
        <parent link="yaw_base_link" />
        <child link="pitch_link" />
        <axis xyz="1 0 0 " />

    </joint>

    <!-- transmission -->
    <transmission name="trans_yaw_arm_joint">
        <type>transmission_interface/SimpleTransmission</type>
        <actuator name="yaw_arm_joint_motor">
            <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
            <mechanicalReduction>1</mechanicalReduction>
        </actuator>
        <joint name="yaw_arm_joint">
            <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
        </joint>
    </transmission>
    <transmission name="trans_pitch_joint">
        <type>transmission_interface/SimpleTransmission</type>
        <actuator name="pitch_joint_motor">
            <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
            <mechanicalReduction>1</mechanicalReduction>
        </actuator>
        <joint name="pitch_joint">
            <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
        </joint>
    </transmission>

</robot>