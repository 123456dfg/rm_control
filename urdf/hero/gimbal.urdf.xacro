<robot>

    <link name="yaw_link">
        <inertial>
            <mass value="0.592087"/>
            <origin xyz="0 0 0.013702"/>
            <inertia ixx="9.726e-4" ixy="0." ixz="0." iyy="8.809e-4"
                     iyz="0" izz="1.58e-3"/>
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://rm_description/meshes/hero/yaw_base.stl" scale="0.001 0.001 0.001" />
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://rm_description/meshes/hero/yaw_base.stl"  scale="0.001 0.001 0.001" />
            </geometry>
        </collision>
    </link>

    <joint name="yaw_joint"  type="fixed">
        <origin xyz="0 0 0.1"
                rpy="0 0 0" />
        <parent link="base_link" />
        <child link="yaw_link" />
        <axis xyz="0 0 1" />

    </joint>

    <link name="pitch_link">
        <inertial>
            <mass value="1.538674"/>
            <origin xyz="0.080443 -0.002306 0.010242"/>
            <inertia ixx="4.18e-3" ixy="-2.3e-5" ixz="-1.212e-3" iyy="2.369e-2"
                     iyz="-6.373e-5" izz="2.286e-2"/>
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://rm_description/meshes/hero/pitch.stl" scale="0.001 0.001 0.001" />
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://rm_description/meshes/hero/pitch.stl"  scale="0.001 0.001 0.001" />
            </geometry>
        </collision>
    </link>

    <joint name="pitch_joint"  type="revolute">
        <origin xyz="0 0 0.2841"  rpy="0 0 0" />
        <limit effort="3000" velocity="1000" lower="-0.436323" upper="0.7853982"/>

        <safety_controller k_velocity="10" k_position="15" soft_lower_limit="" soft_upper_limit="0.5" />

        <parent link="yaw_link" />
        <child link="pitch_link" />
        <axis xyz="0 1 0 " />

    </joint>



</robot>