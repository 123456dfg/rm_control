<?xml version="1.0" encoding="utf-8"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="hand">
    <!-- safety_distance: Minimum safety distance in [m] by which the collision volumes are expanded and which is enforced during robot motions -->
    <xacro:macro name="gimbal" params="connected_to:='' xyz:='0 0 0' rpy:='0 0 0' simulation ">


        <link name="mast">
            <inertial>
                <mass value="0.348"/>
                <origin xyz="0.029 0.042 0.096" rpy="0 0 0"/>
                <inertia ixx="1.221e-2" ixy="1.727e-5" ixz="6.890e-4" iyy="1.237e-2" iyz="7.284e-5" izz="3.043e-4"/>
            </inertial>
            <visual>
                <geometry>
                    <mesh filename="package://rm_description/meshes/gineer/mast.stl" scale="0.001 0.001 0.001"/>
                </geometry>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <box size="0.055 0.267 0.06"/>
                </geometry>
            </collision>
        </link>

        <link name="yaw">
            <inertial>
                <origin xyz="0.0 0.075 0.021" rpy="0 0 0"/>
                <mass value="0.284"/>
                <inertia ixx="7.653e-4" ixy="1.922e-5" ixz="1.589e-5" iyy="3.805e-4" iyz="-3.052e-4" izz="4.364e-4"/>
            </inertial>
            <visual>
                <geometry>
                    <box size="0.030 0.027 0.063"/>
                </geometry>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <box size="0.030 0.027 0.063"/>
                </geometry>
            </collision>
        </link>

        <link name="pitch">
            <inertial>
                <origin xyz="0.0 -0.075 0.021" rpy="0 0 0"/>
                <mass value="0.284"/>
                <inertia ixx="7.653e-4" ixy="1.922e-5" ixz="-1.589e-5" iyy="3.805e-4" iyz="3.052e-4" izz="4.364e-4"/>
            </inertial>
            <visual>
                <geometry>
                    <box size="0.030 0.027 0.063"/>
                </geometry>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <box size="0.030 0.027 0.063"/>
                </geometry>
            </collision>
        </link>

        <link name="camera1">
            <inertial>
                <mass value="0.05"/>
                <origin xyz="0 0 0"/>
                <inertia ixx="1.271e-3" ixy="2.07e-7" ixz="8.854e-6" iyy="5.190e-4" iyz="1.001e-6" izz="9.976e-4"/>
            </inertial>
            <visual>
                <origin xyz=" 0 0 0 " rpy="0 0 0"/>
                <geometry>
                    <box size="0.022 0.021 0.0226"/>
                </geometry>
                <material name="Black"/>
            </visual>
            <collision>
                <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
                <geometry>
                    <box size="0.01 0.04 0.04"/>
                </geometry>
            </collision>
        </link>


        <link name="camera2">
            <inertial>
                <mass value="0.05"/>
                <origin xyz="0 0 0"/>
                <inertia ixx="1.271e-3" ixy="2.07e-7" ixz="8.854e-6" iyy="5.190e-4" iyz="1.001e-6" izz="9.976e-4"/>
            </inertial>
            <visual>
                <origin xyz=" 0 0 0 " rpy="0 0 0"/>
                <geometry>
                    <box size="0.022 0.021 0.0226"/>
                </geometry>
                <material name="Black"/>
            </visual>
            <collision>
                <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
                <geometry>
                    <box size="0.01 0.04 0.04"/>
                </geometry>
            </collision>
        </link>

        <xacro:unless value="${connected_to == ''}">
            <joint name="mast_joint" type="prismatic">
                <parent link="${connected_to}"/>
                <child link="mast"/>
                <origin xyz="${xyz}" rpy="${rpy}"/>
            </joint>
        </xacro:unless>

        <joint name="yaw_joint" type="revolute">
            <origin xyz="0 0 0.129"
                    rpy="0 0 0"/>
            <dynamics damping="0.0" friction="0.1"/>
            <limit effort="1.2" velocity="13.82" lower="-1e10" upper="1e10"/>
            <parent link="mast"/>
            <child link="yaw"/>
            <axis xyz="0 0 1"/>
        </joint>

        <joint name="pitch_joint" type="revolute">
            <origin xyz="-0.06  0 0.191 " rpy="0 0 0"/>
            <dynamics damping="0.0" friction="0.1"/>
            <limit effort="1.2" velocity="13.82" lower="-1e10" upper="1e10"/>
            <safety_controller k_velocity="0.1"
                               k_position="100"
                               soft_lower_limit="${pitch_lower_limit+threshold}"
                               soft_upper_limit="${pitch_upper_limit-threshold}"/>
            <parent link="yaw"/>
            <child link="pitch"/>
            <axis xyz="0 1 0 "/>
        </joint>

        <joint name="camera1_joint" type="fixed">
            <parent link="pitch"/>
            <child link="camera1"/>
            <origin xyz="0.055 -0.85 0.0962" rpy="0 0 0"/>
            <axis xyz="0 0 1"/>
        </joint>

        <joint name="camera2_joint" type="fixed">
            <parent link="pitch"/>
            <child link="camera2"/>
            <origin xyz="0.055 0.85 0.0962" rpy="0 0 0"/>
            <axis xyz="0 0 1"/>
        </joint>


        <transmission name="trans_yaw_joint">
            <type>transmission_interface/SimpleTransmission</type>
            <actuator name="yaw_joint_motor">
                <mechanicalReduction>1</mechanicalReduction>
            </actuator>
            <joint name="yaw_joint">
                <offset>-2.160</offset>
                <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
            </joint>
        </transmission>

        <transmission name="trans_pitch_joint">
            <type>transmission_interface/SimpleTransmission</type>
            <actuator name="pitch_joint_motor">
                <mechanicalReduction>-1</mechanicalReduction>
                <mechanicalReduction>1</mechanicalReduction>
            </actuator>
            <joint name="pitch_joint">
                <offset>0.902</offset>
                <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
            </joint>
        </transmission>

        <transmission name="trans_mast_joint">
            <type>transmission_interface/SimpleTransmission</type>
            <joint name="mast_joint">
                <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
                <offset>0.0</offset>
            </joint>
            <actuator name="mast_motor">
                <mechanicalReduction>30</mechanicalReduction>
            </actuator>
        </transmission>

        <xacro:if value="${simulation}">
            <gazebo reference="camera_link">
                <sensor type="camera" name="camera">
                    <update_rate>30.0</update_rate>
                    <camera name="head">
                        <horizontal_fov>1.3962634</horizontal_fov>
                        <image>
                            <width>1920</width>
                            <height>1080</height>
                            <format>R8G8B8</format>
                        </image>
                        <clip>
                            <near>0.05</near>
                            <far>5</far>
                        </clip>
                        <noise>
                            <type>gaussian</type>
                            <mean>0.0</mean>
                            <stddev>0.007</stddev>
                        </noise>
                    </camera>
                    <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
                        <alwaysOn>true</alwaysOn>
                        <updateRate>0.0</updateRate>
                        <cameraName>galaxy_camera</cameraName>
                        <imageTopicName>image_raw</imageTopicName>
                        <cameraInfoTopicName>camera_info</cameraInfoTopicName>
                        <frameName>camera_link</frameName>
                        <hackBaseline>0.07</hackBaseline>
                        <distortionK1>0.0</distortionK1>
                        <distortionK2>0.0</distortionK2>
                        <distortionK3>0.0</distortionK3>
                        <distortionT1>0.0</distortionT1>
                        <distortionT2>0.0</distortionT2>
                    </plugin>
                </sensor>
            </gazebo>
        </xacro:if>

    </xacro:macro>
</robot>
